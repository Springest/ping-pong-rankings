- content_for :title, 'New player'
.row
  .span5
    = form_for :player, :url => '/player/save' do |player|
      .row
        .span5
          %legend Enter your details here
          %label Name:
          = player.text_field :name, :placeholder => 'John Smith'
          %label Twitter handle:
          .input-prepend
            %span.add-on @
            = player.text_field :twitter, :placeholder => 'johnsmith'
      .row
        .span5
          = player.submit :class => 'btn btn-primary'

  .span4
    %h4 Recently added players
    %ul
      - Player.order('created_at desc').limit(8).each do |player|
        %li
          = player.name
          - if player.created_at > 1.minute.ago
            %span.label.label-success saved
          - elsif player.created_at > Time.new.yesterday
            %span.label new
