- @player ||= Player.new
= form_for @player, :html => {:class => 'default-form'} do |player|
  = player.hidden_field :id
  %h1 Enter your details here

  .input
    %label Name:
    = player.text_field :name, :placeholder => 'John Smith', :class => 'string'

  .input
    %label Twitter handle:
    %span.icon @
    = player.text_field :twitter, :placeholder => 'johnsmith', :class => 'string icon'

  .buttons
    = player.submit :class => 'btn'
