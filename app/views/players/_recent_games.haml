.panda-players
- games = Game.order('created_at DESC').limit(5)
- games.each do |game|
  .game-row{ :class => game.created_at > 5.minutes.ago ? 'large-game' : '' }
    .player.first-player
      %h2.player-name= game.winners.map(&:name).to_sentence
      - if last_game
        %span.player-ranking 1582
        %span.label +32
    .game-score
      %span= game.winning_score
      %span= game.losing_score
    .player.second-player.losing
      %h2.player-name= game.losers.map(&:name).to_sentence
      - if last_game
        %span.label -32
        %span.player-ranking 1423
    - if last_game
      - if game.created_at > 5.minutes.ago
        = link_to game_path(game), :method => 'delete' do
          %span.icon-remove